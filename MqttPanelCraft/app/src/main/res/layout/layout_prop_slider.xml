<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- SECTION 1: INTERACTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_touch_app"
                app:tint="@color/props_primary"
                android:layout_marginEnd="6dp"/>
                
            <TextView
                android:text="@string/properties_section_interaction"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/prop_text_secondary"
                android:letterSpacing="0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Send Mode Toggle -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleSendMode"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="12dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedButton="@+id/btnModeRelease">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModeRelease"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/prop_val_on_release"
                android:textSize="12sp"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModeContinuous"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/prop_val_continuous"
                android:textSize="12sp"
                app:cornerRadius="12dp"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Interval Input (Conditional) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prop_label_interval"
            app:helperText="@string/prop_helper_interval"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            style="@style/Widget.App.TextInputLayout.Properties">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="100"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/prop_label_min"
                android:layout_marginEnd="8dp"
                style="@style/Widget.App.TextInputLayout.Properties">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/prop_label_max"
                android:layout_marginEnd="8dp"
                style="@style/Widget.App.TextInputLayout.Properties">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="100"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/prop_label_step"
                style="@style/Widget.App.TextInputLayout.Properties">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="1"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line"
            android:layout_marginBottom="16dp" />

        <!-- SECTION 4: APPEARANCE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_palette"
                app:tint="@color/props_primary"
                android:layout_marginEnd="6dp"/>
                
            <TextView
                android:text="@string/properties_section_appearance"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/prop_text_secondary"
                android:letterSpacing="0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Dynamic Appearance Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- MAIN STYLE DROPDOWN (Top) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prop_hint_style"
                android:layout_marginBottom="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxCornerRadiusTopStart="12dp" app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp" app:boxCornerRadiusBottomEnd="12dp">
                <AutoCompleteTextView
                    android:id="@+id/spPropStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- GROUP 1: NORMAL STYLE (Classic / Capsule) -->
            <LinearLayout
                android:id="@+id/containerNormalStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginBottom="12dp">

                <!-- Orientation (Left) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:hint="@string/prop_label_orientation"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_marginEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp" app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp" app:boxCornerRadiusBottomEnd="12dp">
                    <AutoCompleteTextView
                        android:id="@+id/spOrientation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Shape (Right) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:hint="@string/prop_hint_shape"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxCornerRadiusTopStart="12dp" app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp" app:boxCornerRadiusBottomEnd="12dp">
                    <AutoCompleteTextView
                        android:id="@+id/spPropShape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <!-- Feedback (Left) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:hint="Feedback"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxCornerRadiusTopStart="12dp" app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp" app:boxCornerRadiusBottomEnd="12dp">
                <AutoCompleteTextView
                    android:id="@+id/spFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Feedback Unit (Conditional) - REMOVED for V6 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/containerFeedbackUnit"
                android:layout_width="0dp"
                android:layout_weight="0"
                android:layout_height="0dp"
                android:hint="Unit"
                android:visibility="gone"
                style="@style/Widget.App.TextInputLayout.Properties">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFeedbackUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="4"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Color Palette (Right) -->
            <include
                android:id="@+id/containerColorPalette"
                layout="@layout/layout_prop_generic_color"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="52dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
