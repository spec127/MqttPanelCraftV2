<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".SetupActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface_color"
            app:title="Project Setup"
            app:titleTextColor="@color/black" />
            <!-- Note: We will set navigation icon to Back arrow in code or use styles -->
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveProject"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Row 1: Import / Export -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImportJson"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Import JSON" 
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportJson"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Export JSON" 
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:visibility="gone"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>
            </LinearLayout>

            <!-- Row 2: Arduino Code (Edit Mode Only) -->
             <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportArduino"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:text="Export Arduino Code" 
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <!-- Project ID (Input Box Style - Always Visible) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProjectId"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Project ID"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_refresh"
                app:endIconContentDescription="Generate New ID">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProjectId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:text="abc12345"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"
                    android:fontFamily="monospace"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Row 3: Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProjectName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_project_name"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Row 4: Broker & Port -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilBroker"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:layout_marginEnd="8dp"
                    android:hint="Broker">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBroker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:textSize="16sp"
                        android:paddingVertical="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPort"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:hint="Port">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1883"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:paddingVertical="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            
            <!-- Row 5: User (Stacked) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUser"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="User">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        
            <!-- Row 6: Password (Stacked) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Test Connection (Compact) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestConnection"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/btn_test_connection"
                android:textSize="14sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginBottom="24dp"/>

            <!-- Theme Cards (Larger) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- IOT Panel -->
                <LinearLayout
                    android:id="@+id/cardHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_card_selected"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="24dp"> <!-- Increased padding -->

                    <ImageView
                        android:id="@+id/ivHome"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_panel_mode"
                        app:tint="@color/primary"
                        android:contentDescription="@string/theme_home"/>

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/theme_home"
                        android:textColor="@color/primary"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Webview -->
                <LinearLayout
                    android:id="@+id/cardWebview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_card_unselected"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:id="@+id/ivWebview"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_globe"
                        app:tint="#757575"
                        android:contentDescription="Webview"/>

                    <TextView
                        android:id="@+id/tvWebview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Webview"
                        android:textColor="#757575"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- Orientation -->
            <RadioGroup
                android:id="@+id/rgOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/rbSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>
                
                <RadioButton
                    android:id="@+id/rbPortrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portrait"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>
                
                <RadioButton
                    android:id="@+id/rbLandscape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Landscape"
                    android:textSize="14sp"/>
            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <!-- Save Button (Docked at Bottom) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveProject"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary"
        android:text="@string/btn_save_start"
        android:textSize="16sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/bannerAdContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/bannerAdContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>
