<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setup_background_base"
    tools:context=".SetupActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_setup_header_gradient"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginStart="-8dp"
            app:tint="@color/setup_input_text_color"
            android:contentDescription="@string/common_btn_cancel" />

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/setup_title_edit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/setup_input_text_color" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@+id/bannerAdContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="50dp">

            <!-- Import/Export Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImportJson"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="@string/import_json"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/setup_accent_color"
                    app:strokeColor="@color/setup_accent_color"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportJson"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="@string/export_json"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="@color/setup_accent_color"
                    app:strokeColor="@color/setup_accent_color"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportArduino"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/arduino_code_export"
                android:textSize="14sp"
                android:visibility="gone"
                android:textStyle="bold"
                android:textColor="@color/setup_accent_color"
                app:strokeColor="@color/setup_accent_color"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"/>

            <!-- Project ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProjectId"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/project_id"
                app:boxStrokeColor="@color/selector_input_stroke"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundColor="@color/setup_input_container_color"
                app:hintTextColor="@color/setup_accent_color"
                app:cursorColor="@color/setup_accent_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:layout_marginBottom="10dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_refresh"
                app:endIconTint="@color/setup_refresh_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProjectId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="false"
                    android:textColor="@color/setup_input_text_color"
                    tools:text="gr8b09xfli" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProjectName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/setup_label_name"
                app:boxStrokeColor="@color/selector_input_stroke"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundColor="@color/setup_input_container_color"
                app:hintTextColor="@color/setup_accent_color"
                app:cursorColor="@color/setup_accent_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/setup_input_text_color"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Broker & Port -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilBroker"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginEnd="12dp"
                    android:hint="@string/setup_label_broker"
                    app:boxStrokeColor="@color/selector_input_stroke"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="@color/setup_input_container_color"
                    app:hintTextColor="@color/setup_accent_color"
                    app:cursorColor="@color/setup_accent_color"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBroker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/setup_input_text_color"
                        android:inputType="textUri" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPort"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/setup_label_port"
                    app:boxStrokeColor="@color/selector_input_stroke"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="@color/setup_input_container_color"
                    app:hintTextColor="@color/setup_accent_color"
                    app:cursorColor="@color/setup_accent_color"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/setup_input_text_color"
                        android:text="1883"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- User/Pass -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUser"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user"
                app:boxStrokeColor="@color/selector_input_stroke"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundColor="@color/setup_input_container_color"
                app:hintTextColor="@color/setup_accent_color"
                app:cursorColor="@color/setup_accent_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/setup_input_text_color"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                app:boxStrokeColor="@color/selector_input_stroke"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundColor="@color/setup_input_container_color"
                app:hintTextColor="@color/setup_accent_color"
                app:cursorColor="@color/setup_accent_color"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/setup_input_text_color"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestConnection"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup_btn_test"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/setup_accent_color"
                app:strokeColor="@color/setup_accent_color"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:paddingVertical="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- Theme Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Panel Card -->
                <LinearLayout
                    android:id="@+id/cardHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_card_selected"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivHome"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_panel_mode"
                        app:tint="@color/setup_accent_color"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Panel"
                        android:textStyle="bold"
                        android:textColor="@color/setup_accent_color"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Webview Card -->
                <LinearLayout
                    android:id="@+id/cardWebview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_card_unselected"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivWebview"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_globe"
                        app:tint="#94A3B8"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvWebview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Webview"
                        android:textStyle="bold"
                        android:textColor="#94A3B8"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvThemeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/setup_desc_panel"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:layout_marginBottom="12dp"/>

            <!-- Orientation -->
            <RadioGroup
                android:id="@+id/rgOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto"
                    android:button="@drawable/selector_radio_custom"
                    android:textColor="@color/selector_radio_text"
                    android:paddingStart="8dp"
                    android:layout_marginEnd="16dp"/>
                
                <RadioButton
                    android:id="@+id/rbPortrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/portrait"
                    android:button="@drawable/selector_radio_custom"
                    android:textColor="@color/selector_radio_text"
                    android:paddingStart="8dp"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/rbLandscape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/landscape"
                    android:button="@drawable/selector_radio_custom"
                    android:textColor="@color/selector_radio_text"
                    android:paddingStart="8dp"/>
            </RadioGroup>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProject"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/setup_btn_save_start"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/setup_primary_button_text"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/setup_primary_button_bg"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
    
    <FrameLayout
        android:id="@+id/bannerAdContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>
