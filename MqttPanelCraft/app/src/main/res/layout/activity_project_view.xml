<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".ProjectViewActivity">

    <!-- AppBar (Z-Order: Top) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Helloworld.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Helloworld.PopupOverlay">
            
            <View
                android:id="@+id/indicatorMqttStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_circle_grey" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- DrawerLayout (Below AppBar) -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- DRAWER CONTENT: Inner Coordinator for Canvas & BottomSheet -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/innerCoordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- CONTENT: Editor Canvas -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/editorScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <FrameLayout
                        android:id="@+id/editorCanvas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="50dp"
                        android:clipToPadding="false"
                        android:background="@color/canvas_background">
                        
                        <!-- Background Pattern -->
                        <com.example.mqttpanelcraft.ui.GridPatternView
                            android:id="@+id/backgroundGrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        
                        <!-- Guidelines Overlay -->
                         <com.example.mqttpanelcraft.ui.AlignmentOverlayView
                            android:id="@+id/guideOverlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </FrameLayout>
                </androidx.core.widget.NestedScrollView>

            </FrameLayout>

            <!-- Scrim (Dark Overlay) -->
            <View
                android:id="@+id/bottomSheetScrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7F000000"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Add Button (Only in Edit Mode) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="90dp"  
                app:srcCompat="@android:drawable/ic_input_add"
                app:tint="@android:color/white"
                app:layout_anchor="@id/bottomSheet"
                app:layout_anchorGravity="top|end"
                android:visibility="gone"/>

            <!-- Bottom Sheet (Logs or Properties) -->
            <FrameLayout
                android:id="@+id/bottomSheet"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/bg_bottom_sheet"
                android:clickable="true"
                android:focusable="true"
                app:layout_behavior="com.example.mqttpanelcraft.ui.LockableBottomSheetBehavior"
                app:behavior_peekHeight="85dp">
                
                <!-- Wrapper for all content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    
                    <!-- Drag Handle / Header (ONLY this part should be interactive) -->
                    <FrameLayout
                        android:id="@+id/bottomSheetHeader"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="32dp">
                        
                        <ImageView
                            android:id="@+id/ivHeaderHandle"
                            android:layout_width="80dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/ic_drag_handle" 
                            app:tint="#CCCCCC" />
                            
                        <TextView
                            android:id="@+id/tvHeaderDelete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="刪除"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                            
                         <ImageView
                            android:id="@+id/ivHeaderTrash"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_delete"
                            app:tint="@android:color/white"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                    </FrameLayout>
                    
                    <!-- Content Area (NOT part of header) -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        
                        <!-- CONTAINER: Logs -->
                        <LinearLayout
                            android:id="@+id/containerLogs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="8dp"
                            android:clickable="true"
                            android:focusable="true">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="24dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">
                                
                                <TextView
                                    android:text="@string/project_console_title"
                                    android:textStyle="bold"
                                    android:textSize="21sp"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                                    
                                    <ImageView
                                    android:id="@+id/btnLogClear"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_broom"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:tint="?android:attr/textColorPrimary"
                                    android:padding="4dp"
                                    android:contentDescription="Clear Logs"/> 
                            </LinearLayout>
                                
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvConsoleLogs"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                                
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                
                                <!-- Row 1: Topic Selector (Publish Target) -->
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/project_hint_topic_target"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
                                    
                                    <AutoCompleteTextView
                                        android:id="@+id/etConsoleTopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:inputType="textNoSuggestions"
                                        android:padding="8dp"/>
                                </com.google.android.material.textfield.TextInputLayout>

                                <Space android:layout_width="match_parent" android:layout_height="4dp"/>

                                <!-- Row 2: Payload + Send -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">
                                    
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/project_label_message"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/etConsolePayload"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="14sp"
                                            android:padding="8dp"/>
                                    </com.google.android.material.textfield.TextInputLayout>

                                    <Button 
                                        android:id="@+id/btnConsoleSend" 
                                        android:layout_width="wrap_content" 
                                        android:layout_height="wrap_content" 
                                        android:text="@string/project_btn_send_console"
                                        android:layout_marginStart="8dp"
                                        style="@style/Widget.MaterialComponents.Button.TextButton"/> 
                                        <!-- Using compact button style or default -->
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                     
                        <!-- CONTAINER: Properties (Compact) -->
                        <LinearLayout
                            android:id="@+id/containerProperties"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="8dp"
                            android:orientation="vertical">
                            
                            <!-- Header (Fixed) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="24dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">
                                
                                <TextView 
                                    android:text="@string/properties_title" 
                                    android:textSize="21sp" 
                                    android:textStyle="bold" 
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <!-- NestedScrollView for Properties (enables BottomSheet coordination) -->
                            <androidx.core.widget.NestedScrollView
                                android:id="@+id/svPropertiesContent"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:fillViewport="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                            <!-- Display Name -->
                            <TextView
                                android:text="@string/project_prop_display_name"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="12dp"
                                android:paddingStart="24dp"
                                android:paddingEnd="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                                
                            <EditText
                                android:id="@+id/etPropName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_edit_text_bg"
                                android:padding="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="16dp"
                                android:textSize="14sp"
                                android:inputType="text"/>

                                <!-- Row: Width / Height / Clone Button -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="4dp">
                                
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/properties_label_width"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etPropWidth"
                                        android:inputType="number"
                                        android:textSize="12sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                
                                <Space android:layout_width="4dp" android:layout_height="wrap_content"/>
                                
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/properties_label_height"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etPropHeight"
                                        android:inputType="number"
                                        android:textSize="12sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                
                                <Space android:layout_width="4dp" android:layout_height="wrap_content"/>
                                
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnClone"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:text="@string/properties_btn_clone"
                                    android:textSize="11sp"
                                    android:padding="0dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>

                                <!-- Composite Topic Editor -->
                            <TextView
                                android:text="@string/properties_label_topic"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                                
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/shape_edit_text_bg"
                                android:padding="8dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="4dp">
                                
                                <TextView
                                    android:id="@+id/tvTopicPrefix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:textSize="14sp"
                                    android:textColor="@color/topic_text_secondary"
                                    android:maxLines="1"
                                    android:ellipsize="start"
                                    android:maxWidth="100dp"/>
                                    
                                <EditText
                                    android:id="@+id/etTopicName"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:hint="NAME"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:inputType="textNoSuggestions|textVisiblePassword"
                                    android:gravity="center"
                                    android:textColor="@color/topic_text_primary"/>
                                    
                                <TextView
                                    android:id="@+id/tvTopicSuffix"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/val"
                                    android:textSize="14sp"
                                    android:textColor="@color/topic_text_secondary"/>
                                    
                                <ImageView
                                    android:id="@+id/btnTopicCopy"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:padding="2dp"
                                    android:src="@drawable/ic_copy"
                                    app:tint="#666666"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:layout_marginStart="8dp"
                                    android:contentDescription="Copy Topic"/>
                                    
                                <ImageView
                                    android:id="@+id/btnTopicReset"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:padding="2dp"
                                    android:src="@drawable/ic_sync"
                                    app:tint="#666666"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:layout_marginStart="8dp"
                                    android:contentDescription="Reset Topic Name"/>
                            </LinearLayout>

                            <!-- Divider: General vs Custom Settings -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/divider_dashed"
                                android:layerType="software"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="16dp"/>



                            <!-- Color Selection -->
                            <TextView
                                android:text="@string/properties_label_color"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="24dp"
                                android:paddingEnd="16dp"
                                android:layout_marginBottom="4dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="24dp"
                                android:paddingEnd="16dp"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:id="@+id/vPropColorPreview"
                                    android:layout_width="120dp"
                                    android:layout_height="48dp"
                                    android:gravity="center"
                                    android:text="@string/properties_label_default"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:background="@drawable/bg_color_preview"
                                    android:clickable="true"
                                    android:focusable="true"/>
                            </LinearLayout>

                            <!-- Button Specific Properties -->
                            <LinearLayout
                                android:id="@+id/containerButtonProps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <!-- Payload (Message) -->
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/project_hint_payload"
                                    android:layout_marginStart="24dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginBottom="8dp"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etPropPayload"
                                        android:inputType="text"
                                        android:textSize="14sp"
                                        android:text="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </com.google.android.material.textfield.TextInputLayout>

                                <!-- Button Text (Label) -->
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/properties_label_button_text"
                                    android:layout_marginStart="24dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginBottom="12dp"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etPropButtonText"
                                        android:inputType="text"
                                        android:textSize="14sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </com.google.android.material.textfield.TextInputLayout>

                                <!-- Icon Selection -->
                                <TextView
                                    android:text="@string/app_logo" 
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="24dp"
                                    android:paddingEnd="16dp"
                                    android:layout_marginBottom="4dp"/>
                                <!-- Note: 'Icon' wasn't extracted, using app_logo or just hardcoding 'Icon' if no better generic? 
                                     Actually 'Icon' -> '圖示' is better. I don't have 'label_icon'.
                                     Wait, let me add 'label_icon' to strings first or reuse something?
                                     I will use 'sidebar_components' which is 'Components'/'元件'. Not ideal.
                                     I'll add 'label_icon' now to strings if possible, or just skip it for now and do it in next step.
                                     For now, I'll use hardcoded 'Icon' since I didn't add the string. Or...
                                     I'll assume I can add it? No, tool calls are strict.
                                     I'll leave 'Icon' hardcoded for this block or use 'app_logo' (App Logo / 應用程式圖示) - weird.
                                     I'll just leave "Icon" text but replace the other strings.
                                     Actually, I will Add 'label_icon' to ReplaceFileContent in Step 1/2 of this batch? No, I can't modify prev tool calls.
                                     I'll stick to replacing the known ones.
                                 -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingStart="24dp"
                                    android:paddingEnd="16dp"
                                    android:layout_marginBottom="12dp">

                                    <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:orientation="horizontal"
                                       android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/ivPropIconPreview"
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:scaleType="fitCenter"
                                            android:src="@android:drawable/ic_menu_add"
                                            android:padding="8dp"
                                            android:background="@drawable/shape_edit_text_bg"/>

                                        <Button
                                            android:id="@+id/btnSelectIcon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/properties_btn_select_icon"
                                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                            android:layout_marginStart="16dp"/>

                                        <Button
                                            android:id="@+id/btnClearIcon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/properties_btn_no_icon"
                                            style="@style/Widget.MaterialComponents.Button.TextButton"
                                            android:textColor="#666666"
                                            android:layout_marginStart="8dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Compression (Hidden usually) -->
                             <LinearLayout
                                 android:id="@+id/containerCompression"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical"
                                 android:visibility="gone">
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Quality"
                                     android:textSize="12sp"/>
                                 <com.google.android.material.slider.Slider
                                     android:id="@+id/sliderCompression"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:valueFrom="1.0"
                                     android:valueTo="5.0"
                                     android:stepSize="1.0"/>
                             </LinearLayout>
                             


                             <!-- Buttons -->
                             <Button
                                 android:id="@+id/btnSaveProps"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="@string/properties_btn_apply"
                                 android:visibility="gone"/>
                              </LinearLayout>

                          </androidx.core.widget.NestedScrollView>
                         </LinearLayout>
                    </FrameLayout> 
                </LinearLayout>
            </FrameLayout>
            
            <!-- Mode Toggle FAB -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_anchor="@id/bottomSheet"
                app:layout_anchorGravity="top|end"
                android:layout_margin="16dp" 
                app:tint="@android:color/white"
                app:srcCompat="@android:drawable/ic_media_play"/> 
                
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!-- LEFT SIDEBAR: Components (Drawer) -->
    <LinearLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorSurface"
        android:orientation="vertical">
        
         <!-- Edit Mode Content: Components -->
         <LinearLayout
             android:id="@+id/sidebarEditMode"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <include layout="@layout/layout_sidebar_components" />
         </LinearLayout>
         

         
    </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

    <!-- Settings Wrench (Overlay - replacing Custom Gear) -->
    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_settings_custom"
        android:padding="13dp"
        app:tint="@android:color/white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="top|end"
        android:layout_marginEnd="0dp"
        android:elevation="10dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btnGrid"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_grid_on" 
        android:padding="13dp"
        app:tint="@android:color/white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="top|end"
        android:layout_marginEnd="58dp"
        android:elevation="10dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btnUndo"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_undo_white" 
        android:padding="13dp"
        app:tint="@android:color/white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="top|end"
        android:layout_marginEnd="116dp"
        android:elevation="10dp"
        android:visibility="visible" />

    <!-- Drop to Delete Zone (Overlay Bar) -->
    <FrameLayout
        android:id="@+id/dropDeleteZone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_bottom_sheet"
        android:backgroundTint="#FF4444"
        android:visibility="gone"
        android:elevation="20dp"
        android:layout_gravity="bottom">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="#FFFFFF"/>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
