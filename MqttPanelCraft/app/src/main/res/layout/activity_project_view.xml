<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_canvas_gradient"
    android:fitsSystemWindows="false"
    tools:context=".ProjectViewActivity">

    <!-- AppBar (Z-Order: Top) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:stateListAnimator="@null"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.Helloworld.AppBarOverlay">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:elevation="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/Theme.Helloworld.PopupOverlay"/>

            <!-- Overlay for centered elements -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:paddingStart="56dp"
                android:paddingEnd="56dp">

                <View
                    android:id="@+id/indicatorMqttStatus"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_circle_grey" />

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/indicatorMqttStatus"
                    android:layout_marginEnd="12dp"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/toolbar_text"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </FrameLayout>
        
    </com.google.android.material.appbar.AppBarLayout>

    <!-- DrawerLayout (Below AppBar) -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- DRAWER CONTENT: Inner Coordinator for Canvas & BottomSheet -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/innerCoordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- CONTENT: Editor Canvas -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/editorScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <FrameLayout
                        android:id="@+id/editorCanvas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="100dp"
                        android:clipToPadding="false"
                        android:background="@drawable/bg_canvas_border">
                        
                        <!-- Background Pattern -->
                        <com.example.mqttpanelcraft.ui.GridPatternView
                            android:id="@+id/backgroundGrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        
                        <!-- Guidelines Overlay -->
                         <com.example.mqttpanelcraft.ui.AlignmentOverlayView
                            android:id="@+id/guideOverlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </FrameLayout>
                </androidx.core.widget.NestedScrollView>

            </FrameLayout>

            <!-- Scrim (Dark Overlay) -->
            <View
                android:id="@+id/bottomSheetScrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7F000000"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Add Button (Only in Edit Mode) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="90dp"  
                app:srcCompat="@android:drawable/ic_input_add"
                app:tint="@android:color/white"
                app:layout_anchor="@id/bottomSheet"
                app:layout_anchorGravity="top|end"
                android:visibility="gone"/>

            <!-- Bottom Sheet (Logs or Properties) -->
            <FrameLayout
                android:id="@+id/bottomSheet"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/bg_bottom_sheet"
                android:clickable="true"
                android:focusable="true"
                app:layout_behavior="com.example.mqttpanelcraft.ui.LockableBottomSheetBehavior"
                app:behavior_peekHeight="100dp">
                
                <!-- Wrapper for all content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    
                    <!-- Drag Handle / Header (ONLY this part should be interactive) -->
                    <FrameLayout
                        android:id="@+id/bottomSheetHeader"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="32dp">
                        
                        <ImageView
                            android:id="@+id/ivHeaderHandle"
                            android:layout_width="80dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/ic_drag_handle" 
                            app:tint="#CCCCCC" />
                            
                        <TextView
                            android:id="@+id/tvHeaderDelete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="刪除"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                            
                         <ImageView
                            android:id="@+id/ivHeaderTrash"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_delete"
                            app:tint="@android:color/white"
                            android:layout_gravity="center"
                            android:visibility="gone"/>
                    </FrameLayout>
                    
                    <!-- Content Area (NOT part of header) -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        
                        <!-- CONTAINER: Logs -->
                        <LinearLayout
                            android:id="@+id/containerLogs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="8dp"
                            android:clickable="true"
                            android:focusable="true">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="24dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">
                                
                                <TextView
                                    android:text="@string/project_console_title"
                                    android:textStyle="bold"
                                    android:textSize="21sp"
                                    android:textColor="@color/toolbar_text"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"/>
                                    
                                    <ImageView
                                    android:id="@+id/btnLogClear"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_broom"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:tint="@color/prop_text_secondary"
                                    android:padding="4dp"
                                    android:contentDescription="Clear Logs"/> 
                            </LinearLayout>
                                
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvConsoleLogs"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scrollbars="vertical"
                                android:layout_marginBottom="8dp"/>
                                
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">
                                
                                <!-- Row 1: Topic Selector (Publish Target) -->
                                <AutoCompleteTextView
                                    android:id="@+id/etConsoleTopic"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="@string/project_hint_topic_target"
                                    android:background="@drawable/bg_input_dense_purple"
                                    android:textSize="13sp"
                                    android:inputType="textNoSuggestions"
                                    android:textColor="@color/primary"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"
                                    android:layout_marginBottom="8dp"/>

                                <!-- Row 2: Payload + Send -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="16dp">
                                    
                                    <EditText
                                        android:id="@+id/etConsolePayload"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="40dp"
                                        android:hint="@string/project_label_message"
                                        android:background="@drawable/bg_input_dense_purple"
                                        android:textSize="13sp"
                                        android:inputType="text"
                                        android:textColor="@color/toolbar_text"
                                        android:paddingStart="12dp"
                                        android:paddingEnd="12dp"/>

                                    <Button 
                                        android:id="@+id/btnConsoleSend" 
                                        android:layout_width="wrap_content" 
                                        android:layout_height="wrap_content" 
                                        android:text="@string/project_btn_send_console"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/toolbar_text"
                                        android:layout_marginStart="8dp"
                                        style="@style/Widget.MaterialComponents.Button.TextButton"/> 
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                     
                        <!-- CONTAINER: Properties (Compact) -->
                        <LinearLayout
                            android:id="@+id/containerProperties"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="8dp"
                            android:orientation="vertical">
                            
                            <!-- Header (Fixed) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="24dp"
                                android:paddingEnd="16dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="28dp">
                                
                                <TextView 
                                    android:text="@string/properties_title" 
                                    android:textSize="21sp" 
                                    android:textStyle="bold" 
                                    android:textColor="@color/toolbar_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <!-- NestedScrollView for Properties (enables BottomSheet coordination) -->
                            <androidx.core.widget.NestedScrollView
                                android:id="@+id/svPropertiesContent"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:fillViewport="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingStart="24dp"
                                    android:paddingEnd="24dp"
                                    android:paddingTop="6dp">

                                    <!-- Display Name -->
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/project_prop_display_name"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        app:boxCornerRadiusTopStart="16dp"
                                        app:boxCornerRadiusTopEnd="16dp"
                                        app:boxCornerRadiusBottomStart="16dp"
                                        app:boxCornerRadiusBottomEnd="16dp"
                                        app:boxStrokeColor="@color/toolbar_text"
                                        android:layout_marginBottom="8dp">
                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/etPropName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="text"
                                            android:textSize="17sp"
                                            android:textColor="@color/prop_text_primary"/>
                                    </com.google.android.material.textfield.TextInputLayout>

                                    <!-- Row: Width / Height / Clone -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="8dp">
                                        
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/properties_label_width"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                            app:boxCornerRadiusTopStart="16dp"
                                            app:boxCornerRadiusTopEnd="16dp"
                                            app:boxCornerRadiusBottomStart="16dp"
                                            app:boxCornerRadiusBottomEnd="16dp"
                                            app:boxStrokeColor="@color/toolbar_text">
                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/etPropWidth"
                                                android:inputType="number"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="17sp"
                                                android:textColor="@color/prop_text_primary"/>
                                        </com.google.android.material.textfield.TextInputLayout>
                                        
                                        <Space android:layout_width="10dp" android:layout_height="wrap_content"/>
                                        
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/properties_label_height"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                            app:boxCornerRadiusTopStart="16dp"
                                            app:boxCornerRadiusTopEnd="16dp"
                                            app:boxCornerRadiusBottomStart="16dp"
                                            app:boxCornerRadiusBottomEnd="16dp"
                                            app:boxStrokeColor="@color/toolbar_text">
                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/etPropHeight"
                                                android:inputType="number"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="17sp"
                                                android:textColor="@color/prop_text_primary"/>
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <Space android:layout_width="10dp" android:layout_height="wrap_content"/>
                                        
                                        <!-- Clone Button (Pill Shape) -->
                                        <com.google.android.material.button.MaterialButton
                                            android:id="@+id/btnClone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="46dp"
                                            android:text="@string/properties_btn_clone"
                                            android:textColor="@color/toolbar_text"
                                            android:textSize="16sp"
                                            app:strokeColor="#E0E0E0"
                                            app:strokeWidth="1dp"
                                            app:cornerRadius="16dp"
                                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                            android:insetTop="0dp"
                                            android:insetBottom="0dp"/>
                                    </LinearLayout>

                                    <!-- Topic Section -->
                                    <TextView
                                        android:text="@string/properties_label_topic"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/prop_text_secondary"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="4dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:padding="8dp"
                                        android:background="@drawable/bg_topic_container"
                                        android:layout_marginBottom="8dp">

                                        <TextView
                                            android:id="@+id/tvTopicPrefix"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="..."
                                            android:textSize="14sp"
                                            android:textColor="@color/prop_text_secondary"
                                            android:maxWidth="160dp"
                                            android:ellipsize="start"
                                            android:singleLine="true"/>

                                        <EditText
                                            android:id="@+id/etTopicName"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:background="@null"
                                            android:hint="ID"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/toolbar_text"
                                            android:gravity="center_horizontal"/>

                                        <TextView
                                            android:id="@+id/tvTopicSuffix"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=""
                                            android:textSize="14sp"
                                            android:textColor="@color/prop_text_secondary"/>

                                        <ImageView
                                            android:id="@+id/btnTopicCopy"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:src="@drawable/ic_copy"
                                            app:tint="@color/toolbar_text"
                                            android:padding="4dp"
                                            android:layout_marginStart="8dp"
                                            android:background="?attr/selectableItemBackgroundBorderless"/>
                                            
                                        <ImageView
                                            android:id="@+id/btnTopicReset"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:src="@drawable/ic_sync"
                                            app:tint="@color/toolbar_text"
                                            android:padding="4dp"
                                            android:layout_marginStart="8dp"
                                            android:background="?attr/selectableItemBackgroundBorderless"/>
                                    </LinearLayout>

                                    <!-- Color Section -->
                                    <TextView
                                        android:text="@string/properties_label_color"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/prop_text_secondary"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="4dp"/>
                                        
                                    <TextView
                                        android:id="@+id/vPropColorPreview"
                                        android:layout_width="120dp"
                                        android:layout_height="40dp"
                                        android:gravity="center"
                                        android:text="@string/properties_label_default"
                                        android:textSize="14sp"
                                        android:layout_marginBottom="8dp"
                                        android:clickable="true"
                                        android:focusable="true"/>

                                    <!-- Specific Properties Injection Point -->
                                    <LinearLayout
                                        android:id="@+id/containerSpecificProps"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginBottom="8dp"/>

                                    <!-- Button Properties (Hardcoded Block) -->
                                    <LinearLayout
                                        android:id="@+id/containerButtonProps"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/project_hint_payload"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                            app:boxCornerRadiusTopStart="16dp"
                                            app:boxCornerRadiusTopEnd="16dp"
                                            app:boxCornerRadiusBottomStart="16dp"
                                            app:boxCornerRadiusBottomEnd="16dp"
                                            app:boxStrokeColor="@color/toolbar_text"
                                            android:layout_marginBottom="8dp">
                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/etPropPayload"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="17sp"
                                                android:textColor="@color/prop_text_primary"/>
                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/properties_label_button_text"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                            app:boxCornerRadiusTopStart="16dp"
                                            app:boxCornerRadiusTopEnd="16dp"
                                            app:boxCornerRadiusBottomStart="16dp"
                                            app:boxCornerRadiusBottomEnd="16dp"
                                            app:boxStrokeColor="@color/primary"
                                            android:layout_marginBottom="8dp">
                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/etPropButtonText"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="17sp"
                                                android:textColor="@color/prop_text_primary"/>
                                        </com.google.android.material.textfield.TextInputLayout>
                                        
                                        <!-- Icon Selection -->
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:layout_marginBottom="8dp">
                                            
                                            <ImageView
                                                android:id="@+id/ivPropIconPreview"
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:scaleType="fitCenter"
                                                android:src="@android:drawable/ic_menu_add"
                                                android:padding="6dp"
                                                android:background="@drawable/bg_topic_container"/>
                                                
                                            <Button
                                                android:id="@+id/btnSelectIcon"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/properties_btn_select_icon"
                                                android:textSize="16sp"
                                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                                android:layout_marginStart="12dp"/>
                                                
                                            <Button
                                                android:id="@+id/btnClearIcon"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/properties_btn_no_icon"
                                                android:textSize="16sp"
                                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                                android:textColor="@color/prop_text_secondary"
                                                android:layout_marginStart="6dp"/>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <!-- Save Button -->
                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/btnSaveProps"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:text="@string/properties_btn_apply"
                                        android:textColor="#FFFFFF"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:background="@drawable/bg_btn_primary_large"
                                        android:layout_marginTop="12dp"
                                        android:layout_marginBottom="16dp"/>

                                </LinearLayout>

                          </androidx.core.widget.NestedScrollView>
                         </LinearLayout>
                    </FrameLayout> 
                </LinearLayout>
            </FrameLayout>
            
            <!-- Mode Toggle FAB -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_anchor="@id/bottomSheet"
                app:layout_anchorGravity="top|end"
                android:layout_margin="16dp" 
                app:tint="@android:color/white"
                app:srcCompat="@android:drawable/ic_media_play"/> 
                
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!-- LEFT SIDEBAR: Components (Drawer) -->
    <LinearLayout
        android:id="@+id/sidebarContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorSurface"
        android:orientation="vertical">
        
         <!-- Edit Mode Content: Components -->
         <LinearLayout
             android:id="@+id/sidebarEditMode"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <include layout="@layout/layout_sidebar_components" />
         </LinearLayout>
         

         
    </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

    <!-- Settings Wrench (Overlay - replacing Custom Gear) -->
    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_settings_custom"
        android:padding="13dp"
        app:tint="@color/toolbar_text"
