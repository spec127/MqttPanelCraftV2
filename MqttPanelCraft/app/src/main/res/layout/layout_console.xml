<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetConsole"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#E0F0F2F5"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <!-- Semi-transparent background simulation with alpha usually needs a shape or color resource, 
         using standard card color for now with 90% opacity if supported or just solid -->

    <!-- Drag Handle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_circle_green"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/console_title"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            app:tint="#757575"
            android:contentDescription="@null"/>
            <!-- Using menu icon as expand/collapse hint or generic handle -->

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvConsoleLogs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FAFAFA"
        android:padding="8dp"/>

    <!-- Input Tools -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/etConsoleTopic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_topic"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/etConsolePayload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_payload"
            android:layout_marginStart="8dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnConsoleSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_send"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>
