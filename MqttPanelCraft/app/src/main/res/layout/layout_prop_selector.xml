<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- SECTION 1: INTERACTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="12dp">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_touch_app"
            app:tint="@color/props_primary"
            android:layout_marginEnd="6dp"/>
            
        <TextView
            android:text="@string/properties_section_interaction"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/prop_text_secondary"
            android:letterSpacing="0.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Multi-Segment Config (Primary for Selector) -->
    <LinearLayout
        android:id="@+id/containerMultiConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Orientation & Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleOrientation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@+id/btnOrientHorz">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOrientHorz"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="Horizontal"
                    android:textSize="10sp"
                    android:padding="0dp"
                    app:cornerRadius="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOrientVert"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="Vertical"
                    android:textSize="10sp"
                    android:padding="0dp"
                    app:cornerRadius="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Segments Count Control -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_input_outline"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp">
                <ImageView
                    android:id="@+id/btnSegRemove"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_remove"
                    app:tint="#796383"
                    android:padding="6dp"
                    android:background="?selectableItemBackgroundBorderless"/>
                <TextView
                    android:id="@+id/tvSegCount"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/btnSegAdd"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/props_primary"
                    android:padding="6dp"
                    android:background="?selectableItemBackgroundBorderless"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Headers -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="LABEL"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/prop_text_secondary"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="VALUE"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/prop_text_secondary"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>
        </LinearLayout>

        <!-- Segment List (Dynamic) -->
        <LinearLayout
            android:id="@+id/llSegmentsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="0dp">
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- SECTION 2: APPEARANCE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="4dp">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_palette"
            app:tint="@color/props_primary"
            android:layout_marginEnd="6dp"/>
            
        <TextView
            android:text="@string/properties_section_appearance"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/prop_text_secondary"
            android:letterSpacing="0.05"
            android:gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Style Selector -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content" 
            android:hint="@string/prop_hint_style"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            
            <AutoCompleteTextView
                 android:id="@+id/spPropStyle"
                 android:layout_width="match_parent"
                 android:layout_height="52dp"
                 android:inputType="none"
                 android:textSize="13sp"
                 android:maxLines="1"
                 app:autoSizeTextType="uniform"
                 app:autoSizeMinTextSize="10sp"
                 app:autoSizeMaxTextSize="14sp"
                 android:ellipsize="end"
                 android:textColor="@color/prop_text_primary"
                 android:gravity="start|center_vertical"
                 android:paddingStart="16dp"
                 android:paddingEnd="12dp"
                 android:popupBackground="@drawable/bg_popup_rounded"
                 android:dropDownWidth="180dp"
                 android:dropDownVerticalOffset="4dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

        <!-- Color Picker (Unified) -->
        <include
            android:id="@+id/containerColorPalette"
            layout="@layout/layout_prop_generic_color"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="52dp" />
    </LinearLayout>

</LinearLayout>
