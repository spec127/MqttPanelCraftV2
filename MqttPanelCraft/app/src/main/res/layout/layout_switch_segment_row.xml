<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_segment_row_unified"
    android:padding="2dp">

    <!-- Label Section (Weight 0.6) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etSegLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Label"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:inputType="text"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="@color/prop_text_secondary"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/btnSegIconToggle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:padding="6dp"
            android:src="@drawable/ic_emoji_emotions"
            app:tint="@color/prop_text_secondary"
            android:background="?selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:background="@color/divider_line"/>

    <!-- Value Section (Weight 0.4) -->
    <EditText
        android:id="@+id/etSegValue"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="0.4"
        android:background="@null"
        android:hint="Value"
        android:gravity="center"
        android:inputType="text"
        android:textSize="13sp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="@color/prop_text_secondary"
        android:singleLine="true"/>

</LinearLayout>
