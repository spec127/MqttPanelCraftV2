<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- SECTION 1: INTERACTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_touch_app"
            app:tint="@color/props_primary"
            android:layout_marginEnd="6dp"/>
            
        <TextView
            android:text="@string/properties_section_interaction"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/prop_text_secondary"
            android:letterSpacing="0.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Mode Toggle (2-Way / 3-Way / Multi) -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleMode"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@+id/btnMode2Way">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMode2Way"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="標準"
            android:textSize="12sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMode3Way"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="三段"
            android:textSize="12sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModeMulti"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="多段"
            android:textSize="12sp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Container: Tri-State (Switch Config) -->
    <LinearLayout
        android:id="@+id/containerTriStateConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPayloadLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages (L / C / R)"
            android:textSize="12sp"
            android:textColor="@color/prop_text_secondary"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            
            <!-- Left -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/Widget.App.TextInputLayout.Properties">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPayloadLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="L"
                    android:inputType="text"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <!-- Center (Visible only in 3-Way) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPayloadCenter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/Widget.App.TextInputLayout.Properties">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPayloadCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="C"
                    android:inputType="text"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Space android:id="@+id/spacePayloadCenter" android:layout_width="8dp" android:layout_height="wrap_content"/>

            <!-- Right -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/Widget.App.TextInputLayout.Properties">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPayloadRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="R"
                    android:inputType="text"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Container: Multi-Segment Config -->
    <LinearLayout
        android:id="@+id/containerMultiConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Orientation & Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            
            <!-- Flatter Height 32dp -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleOrientation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@+id/btnOrientHorz">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOrientHorz"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="Horizontal"
                    android:tooltipText="Horizontal"
                    android:textSize="10sp"
                    android:padding="0dp"
                    app:cornerRadius="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOrientVert"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="32dp"
                    android:text="Vertical"
                    android:tooltipText="Vertical"
                    android:textSize="10sp"
                    android:padding="0dp"
                    app:cornerRadius="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Segments Count Control -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_input_outline"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp">
                <ImageView
                    android:id="@+id/btnSegRemove"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_remove"
                    app:tint="#796383"
                    android:padding="6dp"
                    android:background="?selectableItemBackgroundBorderless"/>
                <TextView
                    android:id="@+id/tvSegCount"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/btnSegAdd"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/props_primary"
                    android:padding="6dp"
                    android:background="?selectableItemBackgroundBorderless"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Headers -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Weight logic must match row -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="LABEL"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/prop_text_secondary"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="VALUE"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/prop_text_secondary"
                android:letterSpacing="0.05"
                android:textAllCaps="true"/>
        </LinearLayout>

        <!-- Segment List (Dynamic) -->
        <LinearLayout
            android:id="@+id/llSegmentsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="0dp">
            <!-- Rows added programmatically -->
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- SECTION 2: APPEARANCE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_palette"
            app:tint="@color/props_primary"
            android:layout_marginEnd="6dp"/>
            
        <TextView
            android:text="@string/properties_section_appearance"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/prop_text_secondary"
            android:letterSpacing="0.05"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Style & Color Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        
        <!-- Style Selector -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="48dp" 
            android:hint="Style"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            
            <AutoCompleteTextView
                 android:id="@+id/spPropStyle"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:inputType="none"
                 android:text="Classic"
                 android:textSize="13sp"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:textColor="@color/prop_text_primary"
                 android:gravity="center_vertical"
                 android:padding="12dp"
                 android:popupBackground="@drawable/bg_popup_rounded"
                 android:dropDownWidth="140dp"
                 android:dropDownVerticalOffset="4dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

        <!-- Color Picker (Unified) -->
        <LinearLayout
            android:id="@+id/containerColorPalette"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_palette_border"
            android:padding="4dp">
            
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">
                <View android:id="@+id/vColor1" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" android:background="@drawable/shape_circle_color" android:backgroundTint="#a573bc"/>
            </FrameLayout>
            
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">
                <View android:id="@+id/vColor2" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" android:background="@drawable/shape_circle_color" android:backgroundTint="#2196F3"/>
            </FrameLayout>
            
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">
                <View android:id="@+id/vColor3" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" android:background="@drawable/shape_circle_color" android:backgroundTint="#4CAF50"/>
            </FrameLayout>
            
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">
                <View android:id="@+id/vColor4" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" android:background="@drawable/shape_circle_color" android:backgroundTint="#FFC107"/>
            </FrameLayout>
            
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">
                <View android:id="@+id/vColor5" android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" android:background="@drawable/shape_circle_color" android:backgroundTint="#FF5722"/>
            </FrameLayout>
            
            <!-- Custom Add Button -->
            <FrameLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">
                <ImageView
                     android:id="@+id/btnColorCustom"
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     android:layout_gravity="center"
                     android:src="@drawable/ic_palette_open"
                     app:tint="@color/prop_text_secondary"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
