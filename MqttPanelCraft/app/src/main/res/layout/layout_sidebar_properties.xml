<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">
    
    <TextView 
        android:text="@string/properties_title"
        android:textSize="18sp" 
        android:textStyle="bold" 
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
    <!-- Topic Config (Main Topic) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/properties_label_topic"
        style="@style/Widget.App.TextInputLayout.Properties"
        android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPropTopicConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <!-- W/H Row -->
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginBottom="8dp">
         <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/properties_label_width"
            style="@style/Widget.App.TextInputLayout.Properties"
            android:layout_marginEnd="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPropWidth"
                android:importantForAutofill="no"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"/>

        </com.google.android.material.textfield.TextInputLayout>
        
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/properties_label_height"
            style="@style/Widget.App.TextInputLayout.Properties">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPropHeight"
                android:importantForAutofill="no"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    
    <!-- ===== 分隔線：通用設定 vs 客製化設定 ===== -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>
    
    <!-- Clone 按鈕 -->
    <Button
        android:id="@+id/btnClone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/properties_btn_clone"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    
    <!-- 顏色選擇 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/properties_label_color"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginEnd="12dp"/>
            
        <TextView
            android:id="@+id/vPropColorPreview"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/properties_label_default"
            android:textSize="11sp"
            android:background="@drawable/bg_color_preview"
            android:clickable="true"
            android:focusable="true"/>
            
        <!-- Hidden backing field for logic compatibility -->
        <EditText
            android:id="@+id/etPropColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="#RRGGBB"
            android:visibility="gone"/>
            
         <TextView
            android:id="@+id/tvColorHex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#FFFFFF"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            android:visibility="gone"/>
            
    </LinearLayout>
        
    <!-- Specific Properties Container -->
    <LinearLayout
        android:id="@+id/containerSpecificProps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">
        <!-- Dynamically inflated content goes here -->
    </LinearLayout>

    <!-- Hidden Name Field just in case needed by logic -->
    <EditText
        android:id="@+id/etPropName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnSaveProps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/properties_btn_apply"/>
        
</LinearLayout>
