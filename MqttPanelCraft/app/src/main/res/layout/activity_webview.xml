<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <!-- AppBar / Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Helloworld.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Helloworld.PopupOverlay">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Web Project"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Status Dot -->
                <View
                    android:id="@+id/viewStatusDot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_toEndOf="@id/tvToolbarTitle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_circle_green" />

                <!-- Upload Icon -->
                <ImageView
                    android:id="@+id/btnUpload"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_toStartOf="@id/btnInfo"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_folder_open_custom"
                    app:tint="@android:color/white" />

                <!-- Info Icon -->
                <ImageView
                    android:id="@+id/btnInfo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_toStartOf="@id/btnSettings"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="@android:color/white" />

                <!-- Settings Icon -->
                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_settings_custom"
                    app:tint="@android:color/white" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">
        
        <!-- Code Editor Container (Hidden by default or split?) -->
        <FrameLayout
            android:id="@+id/containerCode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">
             <EditText
                android:id="@+id/etCodeEditor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|start"
                android:background="@android:color/white"
                android:padding="8dp"
                android:hint="&lt;html&gt;...&lt;/html&gt;"
                android:fontFamily="monospace"
                android:textSize="14sp" />
        </FrameLayout>

        <!-- WebView Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

    </LinearLayout>

    <!-- FAB for Code Editing -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_edit"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
