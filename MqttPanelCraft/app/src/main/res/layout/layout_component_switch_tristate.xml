<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- The Track: The background pill/rect -->
    <View
        android:id="@+id/viewTrack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Click Zones: Three equal areas across the track -->
    <View
        android:id="@+id/zoneLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zoneCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/zoneCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/zoneRight"
        app:layout_constraintStart_toEndOf="@id/zoneLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/zoneRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/zoneCenter"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- The Thumb: The sliding part -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvThumb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@id/viewTrack"
        app:layout_constraintEnd_toEndOf="@id/viewTrack"
        app:layout_constraintStart_toStartOf="@id/viewTrack"
        app:layout_constraintTop_toTopOf="@id/viewTrack">

        <!-- Inner Indicator: Used for Lever style bar or Classic dot -->
        <View
            android:id="@+id/innerIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_track_rounded" />
            
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
