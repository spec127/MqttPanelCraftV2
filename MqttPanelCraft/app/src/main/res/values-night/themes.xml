<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Helloworld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Properties Panel Styles (Mirrored from Day Theme for consistency) -->
    <style name="Widget.App.TextInputLayout.Properties" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/prop_input_stroke_selector</item> <!-- Selector for Focus/Unfocus -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/props_primary</item>
        <item name="android:textColorHint">@color/prop_text_secondary</item>
        <!-- Ensure border is visible in Unfocused state via Stroke Color override if needed, 
             but OutlinedBox usually handles it. User reported missing border, 
             so ensuring this style exists is key. -->
    </style>
    
    <style name="Widget.App.Button.Outlined.Properties" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/props_primary</item>
        <item name="android:textColor">@color/props_primary</item>
    </style>
</resources>