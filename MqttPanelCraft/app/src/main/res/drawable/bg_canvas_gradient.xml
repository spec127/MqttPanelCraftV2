<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Layer: Solid End Color (White/Black) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/icy_header_end" />
        </shape>
    </item>
    
    <!-- Top Gradient Layer: Restricted Height (~15% Screen) -->
    <item android:gravity="top" android:height="80dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/icy_header_start"
                android:endColor="@color/icy_header_end"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
