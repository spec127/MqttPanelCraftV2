<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/setup_accent_color" /> <!-- Purple Border -->
            <solid android:color="#207c3aed" /> <!-- Slight Purple Tint Background -->
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/setup_border_color" /> <!-- Pale Purple/White Border -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
